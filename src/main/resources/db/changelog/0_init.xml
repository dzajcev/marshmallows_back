<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="1" author="dzaitsev">
        <createTable tableName="goods">
            <column name="id" type="int4">
                <constraints nullable="false" primaryKey="true" primaryKeyName="goodsPK"/>
            </column>
            <column name="create_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(1000)"/>
        </createTable>
        <addAutoIncrement tableName="goods" columnName="id"/>
        <createTable tableName="prices">
            <column name="id" type="int4">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pricePK"/>
            </column>
            <column name="good_id" type="int4">
                <constraints nullable="false"/>
            </column>
            <column name="create_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="float">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addAutoIncrement tableName="prices" columnName="id"/>
        <createIndex tableName="prices" indexName="price_good_idx">
            <column name="good_id"/>
        </createIndex>
        <addForeignKeyConstraint baseColumnNames="good_id"
                                 baseTableName="prices"
                                 constraintName="fk_prices_good"
                                 referencedColumnNames="id"
                                 referencedTableName="goods"
                                 onUpdate="CASCADE"/>
        <createTable tableName="clients">
            <column name="id" type="int4">
                <constraints nullable="false" primaryKey="true" primaryKeyName="clientsPK"/>
            </column>
            <column name="name" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="create_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="default_delivery_address" type="varchar(500)">
                <constraints nullable="true"/>
            </column>
            <column name="is_active" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="link_channels" type="varchar(500)">
                <constraints nullable="false"/>
            </column>
            <column name="comment" type="varchar(1000)"/>
        </createTable>
        <addAutoIncrement tableName="clients" columnName="id"/>
        <createTable tableName="orders">
            <column name="id" type="int4">
                <constraints nullable="false" primaryKey="true" primaryKeyName="ordersPK"/>
            </column>
            <column name="create_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="deadline_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="comment" type="varchar(1000)"/>
            <column name="client_id" type="int4">
                <constraints nullable="false"/>
            </column>
            <column name="pre_payment_sum" type="float"/>
            <column name="pay_sum" type="float"/>
            <column name="shipped" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="need_delivery" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="complete_date" type="timestamp"/>
            <column name="delivery_address" type="varchar(500)"/>
            <column name="delivery_id" type="int4"/>
            <column name="client_notificated" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="varchar(20)"/>
            <column name="order_status" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="client_id"
                                 baseTableName="orders"
                                 constraintName="fk_clients_orders"
                                 referencedColumnNames="id"
                                 referencedTableName="clients"
                                 onUpdate="CASCADE"/>
        <addAutoIncrement tableName="orders" columnName="id"/>
        <createTable tableName="order_lines">
            <column name="id" type="int4">
                <constraints nullable="false" primaryKey="true" primaryKeyName="orderLinesPK"/>
            </column>
            <column name="num" type="int4">
                <constraints nullable="false"/>
            </column>
            <column name="create_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="good_id" type="int4">
                <constraints nullable="false"/>
            </column>
            <column name="count" type="int4">
                <constraints nullable="false"/>
            </column>
            <column name="price_id" type="int4">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="float">
                <constraints nullable="false"/>
            </column>
            <column name="done" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="order_id" type="int4">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="good_id"
                                 baseTableName="order_lines"
                                 constraintName="fk_goods_order_lines"
                                 referencedColumnNames="id"
                                 referencedTableName="goods"
                                 onUpdate="CASCADE"/>
        <addForeignKeyConstraint baseColumnNames="price_id"
                                 baseTableName="order_lines"
                                 constraintName="fk_price_order_lines"
                                 referencedColumnNames="id"
                                 referencedTableName="prices"
                                 onUpdate="RESTRICT"/>
        <addForeignKeyConstraint baseColumnNames="order_id"
                                 baseTableName="order_lines"
                                 constraintName="fk_orders_order_lines"
                                 referencedColumnNames="id"
                                 referencedTableName="orders"
                                 onUpdate="CASCADE"/>
        <addAutoIncrement tableName="order_lines" columnName="id"/>
        <createTable tableName="deliveries">
            <column name="id" type="int4">
                <constraints nullable="false" primaryKey="true" primaryKeyName="deliveriesPK"/>
            </column>
            <column name="create_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="delivery_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="start_time" type="time">
                <constraints nullable="false"/>
            </column>
            <column name="end_time" type="time">
                <constraints nullable="false"/>
            </column>
            <column name="delivery_status" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addAutoIncrement tableName="deliveries" columnName="id"/>
        <addForeignKeyConstraint baseColumnNames="delivery_id"
                                 baseTableName="orders"
                                 constraintName="fk_orders_deliveries"
                                 referencedColumnNames="id"
                                 referencedTableName="deliveries"
                                 onUpdate="CASCADE"/>
    </changeSet>
    <changeSet id="2" author="dzaitsev">
        <createTable tableName="users">
            <column name="id" type="int4">
                <constraints nullable="false" primaryKey="true" primaryKeyName="usersPK"/>
            </column>
            <column name="create_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(500)">
                <constraints nullable="false"/>
            </column>
            <column name="roles" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="verified" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addAutoIncrement tableName="users" columnName="id"/>
        <createIndex tableName="users" indexName="usersEmailIdx" unique="true">
            <column name="email"/>
        </createIndex>
        <createIndex tableName="users" indexName="usersIdx">
            <column name="email"/>
        </createIndex>
        <createTable tableName="verification_codes">
            <column name="id" type="int4">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="int4">
                <constraints nullable="false"/>
            </column>
            <column name="create_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="ttl" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="verification_codes" columnNames="id, user_id" constraintName="verificationCodesPK"/>
        <addAutoIncrement tableName="verification_codes" columnName="id"/>
    </changeSet>
</databaseChangeLog>